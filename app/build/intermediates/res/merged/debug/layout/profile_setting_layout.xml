<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yunzhanghu.redpacketui.widget.RPTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:RPleftImage="@drawable/rp_back_arrow_black"
        app:RPmytitle="设置头像昵称"
        app:RPsubTitleTextColor="@color/rp_text_transparent_black"
        app:RPtitleBackground="@color/rp_money_white"
        app:RPtitleTextColor="@color/rp_text_all_black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/aliwx_wx_line_color"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="80dp"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_avator"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/xiangji"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:paddingRight="16dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/username"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            />

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/nickname_hint"
            android:textColor="#666"
            android:textColorHint="#BBB"
            android:textSize="16dip"
            android:inputType="text"
            android:background="@null"
            android:singleLine="true"
            />
        <ImageButton
            android:id="@+id/delete"
            android:visibility="gone"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/book_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/aliwx_wx_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/item_bg_line"
        android:gravity="center_vertical"
        android:paddingRight="12dp"
        android:layout_below="@id/line"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/password"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="设置登录密码"
            android:textColor="#666"
            android:textColorHint="#BBB"
            android:textSize="16dip"
            android:inputType="textPassword"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/password_image"
            android:layout_marginLeft="12dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/password_mi"/>
    </LinearLayout>
    <Button
        android:id="@+id/login_bn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/yuding_selector"
        android:textColor="@color/aliwx_white"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:text="保存"/>
</LinearLayout>