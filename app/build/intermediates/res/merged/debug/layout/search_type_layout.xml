<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliwx_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/back_bn"
            android:layout_width="44dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:src="@drawable/history_back"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/edit_bg11"
            android:layout_marginRight="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aliwx_search_icon"/>
            <com.tongtong.purchaser.view.EditTextWithDeleteButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search"
                android:background="@null"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:imeOptions="actionSearch"
                android:textSize="15sp"
                android:textColorHint="@color/aliwx_select_fail_hint_color"
                android:textColor="@color/aliwx_common_text_color"
                android:hint="大白菜"
                />
        </LinearLayout>
        <Button
            android:id="@+id/search_bn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="搜索"
            android:layout_marginRight="12dp"
            android:background="@drawable/yuding_selector" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/aliwx_wx_line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/search_badge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/history"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="历史搜索"/>
                    <ImageButton
                        android:id="@+id/delete"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/delete_history"/>
                </RelativeLayout>
                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/history_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:container_enable_drag="false"
                    app:horizontal_interval="10dp"
                    app:vertical_interval="10dp"
                    app:tag_clickable="true"
                    app:tag_theme="none" />
            </LinearLayout>
            <View
                android:visibility="gone"
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/aliwx_common_text_color"
                    android:text="大家都在搜"/>
                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/hot_search_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:container_enable_drag="false"
                    app:horizontal_interval="10dp"
                    app:vertical_interval="10dp"
                    app:tag_clickable="true"
                    app:tag_theme="none" />
            </LinearLayout>
        </LinearLayout>
           <ListView
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/list"
               android:divider="@color/aliwx_wx_line_color"
               android:dividerHeight="@dimen/line_height"
               android:cacheColorHint="@android:color/transparent"
               android:listSelector="@android:color/transparent"
               />
    </RelativeLayout>

</LinearLayout>