<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <com.yunzhanghu.redpacketui.widget.RPTitleBar
        android:id="@+id/bc_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:RPleftImage="@drawable/rp_back_arrow_black"
        app:RPmytitle="@string/title_add_bankcard"
        app:RPsubTitleTextColor="@color/rp_text_transparent_black"
        app:RPtitleBackground="@color/rp_money_white"
        app:RPtitleTextColor="@color/rp_text_all_black"
        />

    <FrameLayout
        android:id="@+id/bc_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bc_title_bar"
        android:background="@color/rp_money_bg_color"
        />

    <View
        android:id="@+id/bc_target_layout"
        android:layout_width="@dimen/size180px"
        android:layout_height="@dimen/size180px"
        android:layout_centerInParent="true"
        />


</RelativeLayout>
