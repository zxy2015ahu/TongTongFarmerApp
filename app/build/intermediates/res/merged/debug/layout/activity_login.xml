<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <include
        android:id="@+id/title_bar_layout"
        layout="@layout/title_bar_text" />
    <RelativeLayout
        android:id="@+id/check_code_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_layout">
        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="使用验证码登录"
            android:textSize="20sp"
            android:paddingBottom="20dp"/>
        <LinearLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:layout_below="@id/tip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/mobile_icon"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="@string/username_hint"
                android:textColor="#666"
                android:textColorHint="#BBB"
                android:textSize="16dip"
                android:inputType="phone"
                android:background="@null"
                android:singleLine="true"
                />
            <ImageButton
                android:id="@+id/delete_image_btn"
                android:visibility="gone"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book_selector"
                />
        </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_below="@id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/aliwx_wx_line_color"/>
        <LinearLayout
            android:id="@+id/code_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:layout_below="@id/line1"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/yzn_icon"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                />

            <EditText
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="@string/code_hint"
                android:textColor="#666"
                android:textColorHint="#BBB"
                android:textSize="16dip"
                android:inputType="number"
                android:background="@null"
                />
            <TextView
                android:id="@+id/get_code"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="获取验证码"
                android:background="@drawable/yzm_bg"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_below="@id/code_layout"
            >
            <Button
                android:id="@+id/logins"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bn_bg_green_big"
                android:text="登\t录"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="16dip"
                />

            <TextView
                android:id="@+id/text_input_password_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginTop="20dp"
                android:text="通过账号密码登录"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_below="@id/title_bar_layout"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="使用密码登录"
            android:textSize="20sp"
            android:paddingBottom="20dp"/>
        <LinearLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:layout_below="@id/title"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/username"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                />

            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="@string/username_hint"
                android:textColor="#666"
                android:textColorHint="#BBB"
                android:textSize="16dip"
                android:inputType="phone"
                android:background="@null"
                android:singleLine="true"
                />
            <ImageButton
                android:id="@+id/delete"
                android:visibility="gone"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book_selector"
                />
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_below="@id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/aliwx_wx_line_color"/>
        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:layout_below="@id/line"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/password"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="@string/password_hint"
                android:textColor="#666"
                android:textColorHint="#BBB"
                android:textSize="16dip"
                android:password="true"
                android:background="@null"
                />
            <TextView
                android:id="@+id/forward_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="忘记密码"
                />
            <ImageButton
                android:visibility="gone"
                android:id="@+id/password_image"
                android:layout_marginLeft="12dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/password_mi"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_below="@id/password_layout"
            >
            <Button
                android:id="@+id/login_bn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bn_bg_green_big"
                android:text="登\t录"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="16dip"
                />

            <TextView
                android:id="@+id/check_code_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginTop="20dp"
                android:text="通过短信验证码登录"/>
        </LinearLayout>
    </RelativeLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_width="40dp"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用第三方登录"/>
            <View
                android:layout_width="40dp"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/weixin"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/weixin_back">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/weixin_white_icon"
                android:text="微信登录"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textColor="@color/aliwx_white"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="服务协议"/>
            <View
                android:layout_width="@dimen/line_height"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/aliwx_wx_line_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="联系客服"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
