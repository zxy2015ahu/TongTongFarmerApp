<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rp_shape_corner">


    <ImageView
        android:id="@+id/btn_sms_closed"
        style="@style/DialogClosedButtonStyle"/>

    <TextView
        style="@style/DialogTitleStyle"
        android:text="@string/str_input_sms_code"/>

    <View
        android:id="@id/view_line"
        style="@style/DividerStyle"
        android:layout_below="@id/btn_sms_closed"
        android:layout_marginBottom="@dimen/size66px"/>


    <TextView
        android:id="@+id/tv_cell_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view_line"
        android:layout_marginLeft="@dimen/size45px"
        android:text="@string/str_format_send_sms"
        android:textColor="@color/rp_text_grey"
        android:textSize="@dimen/font36px"/>

    <TextView
        android:id="@+id/btn_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_line"
        android:background="@null"
        android:paddingRight="@dimen/size45px"
        android:text="@string/btn_str_send_sms_code"
        android:textColor="@color/rp_text_blue"
        android:textSize="@dimen/font42px"/>

    <com.yunzhanghu.redpacketui.gridpasswordview.GridPasswordView
        android:id="@+id/et_sms_code"
        style="@style/GridPasswordStyle"
        android:layout_below="@id/tv_cell_no"
        android:layout_marginBottom="@dimen/size63px"
        android:layout_marginTop="@dimen/size36px"/>
</RelativeLayout>