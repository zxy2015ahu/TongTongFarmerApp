<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar_back_text_dial"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/city_search_bg"
        android:orientation="horizontal">
        <ListView
            android:layout_width="80dp"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:id="@+id/nav"
            android:divider="@null"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/line1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:scrollbars="none"
                    android:fadingEdge="none"
                    android:divider="@null"
                    android:overScrollMode="never"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/aliwx_activity_vertical_margin"
                    />
                <cdflynn.android.library.scroller.BubbleScroller
                    android:id="@+id/smily_scroller"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    app:bubbleScroller_textSize="@dimen/aliwx_common_text_size"
                    app:bubbleScroller_highlightColor="@color/colorPrimary"
                    app:bubbleScroller_textColor="@color/aliwx_common_text_color2"
                    android:paddingTop="@dimen/aliwx_activity_vertical_margin"
                    android:paddingBottom="@dimen/aliwx_activity_vertical_margin"
                    android:paddingRight="@dimen/aliwx_activity_vertical_margin"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/vector_drawable_recmend"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常用推荐"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/aliwx_common_text_color"
                        />
                </LinearLayout>
                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/history_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:container_enable_drag="false"
                    app:horizontal_interval="10dp"
                    app:vertical_interval="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:tag_clickable="true"
                    app:tag_theme="none" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>