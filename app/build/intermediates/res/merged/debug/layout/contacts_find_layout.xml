<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/city_search_bg"
    android:layout_height="match_parent">
    <com.yunzhanghu.redpacketui.widget.RPTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:RPleftImage="@drawable/rp_back_arrow_black"
        app:RPmytitle="@string/find_contact"
        app:RPsubTitleTextColor="@color/rp_text_transparent_black"
        app:RPtitleBackground="@color/rp_money_white"
        app:RPtitleTextColor="@color/rp_text_all_black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/aliwx_wx_line_color"/>
    <LinearLayout
        android:id="@+id/aliwx_search"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/aliwx_white">
        <ImageView
            android:id="@+id/aliwx_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:src="@drawable/aliwx_search_icon" />
        <view
            android:id="@+id/aliwx_search_keyword"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            class="com.alibaba.mobileim.fundamental.widget.WxEditText"
            android:drawablePadding="@dimen/aliwx_common_unit_margin"
            android:drawableRight="@drawable/aliwx_search_icon_delete_bg"
            android:ellipsize="end"
            android:freezesText="true"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:background="@null"
            android:hint="搜索手机号"
            android:textSize="@dimen/aliwx_second_text_size"
            android:imeOptions="actionSearch"
            android:inputType="phone"
            android:maxLength="25"
            android:paddingRight="20dp"
            android:textColor="@color/aliwx_black"
            android:textColorHint="#999999"
            />
    </LinearLayout>
</LinearLayout>