<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/line_color"
    android:layout_height="match_parent">
       <include layout="@layout/title_bar_back_text"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:id="@+id/root"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:fadingEdge="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/aliwx_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="采购货品"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/anhuang"
                        android:text="(必填)"/>
                    <TextView
                        android:id="@+id/tv_type_name"
                        android:layout_width="0dp"
                        android:paddingLeft="12dp"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:hint="点击选择采购货品"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/icon_point_index"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:id="@+id/layout_additional_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/aliwx_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="采购数量"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/anhuang"
                        android:text="(必填)"/>
                    <TextView
                        android:id="@+id/num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:textColor="@color/colorPrimary"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:hint="点击选择需求量"
                        android:drawableRight="@drawable/icon_point_index"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/aliwx_white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="选填项"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/anhuang"
                        android:text="(填写越详细，找货越快速)"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:background="@color/aliwx_white"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="添加期望货源地"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/anhuang"
                        android:text="(选填)"/>
                    <LinearLayout
                        android:id="@+id/btn_add_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/aliwx_common_text_color2"
                            android:text="最多选择3个"
                            />
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/publish"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="@color/aliwx_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.tongtong.purchaser.widget.NoScrollListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/list"
                        android:headerDividersEnabled="false"
                        android:divider="@null"
                        android:cacheColorHint="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:id="@+id/tv_choose_guige"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/aliwx_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="规格要求"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/anhuang"
                        android:text="(选填)"/>
                    <TextView
                        android:id="@+id/tv_guige_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:textColor="@color/colorPrimary"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:hint="点击选择规格"
                        android:drawableRight="@drawable/icon_point_index"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/aliwx_white"
                    android:padding="16dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="补充说明"
                            android:textColor="@color/aliwx_common_text_color"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/anhuang"
                            android:text="(选填)"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="15sp"
                        android:maxLength="100"
                        android:minHeight="120dp"
                        android:textCursorDrawable="@null"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/aliwx_common_text_color2"
                        android:textColorHint="@color/aliwx_select_fail_hint_color"
                        android:hint="填写详情描述，能让农户更好了解你的具体要求"
                        android:background="@null"
                        android:inputType="textMultiLine"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/count"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/aliwx_common_text_color"
                            android:text="0"/>
                        <TextView
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/aliwx_common_text_color"
                            android:text="/100"/>
                    </LinearLayout>
                </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="16dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="发布遇到问题？可以找"/>
                   <TextView
                       android:id="@+id/line_one"
                       android:textColor="@color/colorPrimary"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/online"/>
               </LinearLayout>
                <Button
                    android:id="@id/confirm_bn"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/yuding_selector"
                    android:textColor="@color/aliwx_white"
                    android:text="确定发布采购"
                    android:layout_margin="16dp"
                    />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>