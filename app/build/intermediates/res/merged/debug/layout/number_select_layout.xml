<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar_back_text"/>
    <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingTop="18dp"
        android:paddingRight="12dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/aliwx_white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/aliwx_common_text_color"
                android:text="多久采购一次"/>
            <com.tongtong.purchaser.widget.NoScrollGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:layout_marginTop="12dp"
                android:numColumns="4"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                android:id="@+id/list"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:textColor="@color/aliwx_common_text_color"
                android:text="采购数量"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_bg2"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/album_num"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:hint="输入需求量"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColorHighlight="@color/aliwx_common_text_color3"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:background="@null"/>
                <View
                    android:layout_width="@dimen/line_height"
                    android:layout_height="match_parent"
                    android:background="@color/aliwx_wx_line_color"/>
                <RelativeLayout
                    android:id="@+id/number_unit"
                    android:layout_width="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="公斤"
                            android:textSize="14sp"
                            android:textColor="@color/aliwx_common_text_color2"/>
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/drop_down_normal"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/confirm_bn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/yuding_selector"
                    android:text="确定"
                    android:textColor="@color/aliwx_white"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>