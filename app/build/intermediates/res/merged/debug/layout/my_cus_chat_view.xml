<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5F5D9"
        android:visibility="gone"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你们还不是好友，加好友方便联系"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/contact_member"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yuding_selector"
            android:text="加为好友"
            android:textColor="@color/aliwx_white"
            android:textSize="12sp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/aliwx_common_text_color2"
                    android:textSize="12sp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="6dp"
                    android:text="当前你要询问的商品："/>
                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/close"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/close_bg_2"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/aliwx_wx_line_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:paddingRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="76dp">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="sdfsdfsd"
                        android:textColor="@color/aliwx_common_text_color"
                        />
                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:textColor="@color/aliwx_common_text_color"
                        android:textSize="12sp"
                        android:layout_below="@id/name"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"
                        android:text="预计产量40000吨"/>
                    <TextView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:textColor="@color/price_color"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:text="7.00元/公斤"/>

                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp">
                <Button
                    android:id="@+id/book"
                    android:textSize="12sp"
                    android:lineSpacingExtra="1dp"
                    android:textColor="@color/text_color"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/yuding_selector4"
                    android:text="立即预定"/>
                <Button
                    android:id="@+id/send"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/book"
                    android:lineSpacingExtra="1dp"
                    android:textColor="@color/text_color"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/yuding_selector4"
                    android:text="发送链接"/>

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/aliwx_wx_line_color"/>
    </LinearLayout>

</LinearLayout>

