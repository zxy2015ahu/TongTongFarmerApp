<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rp_money_white"
                android:paddingTop="@dimen/size30px"
    >

    <ImageView
        android:id="@+id/iv_record_avatar_icon"
        android:layout_width="@dimen/size105px"
        android:layout_height="@dimen/size105px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/size45px"
        android:src="@drawable/rp_avatar"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_money_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size45px"
        android:layout_toRightOf="@id/iv_record_avatar_icon"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        />

    <ImageView
        android:id="@+id/iv_random_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size18px"
        android:layout_marginTop="@dimen/size9px"
        android:layout_toRightOf="@id/tv_money_sender"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money_sender"
        android:layout_marginBottom="@dimen/size30px"
        android:layout_marginLeft="@dimen/size45px"
        android:layout_marginTop="@dimen/size9px"
        android:layout_toRightOf="@id/iv_record_avatar_icon"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        />

    <TextView
        android:id="@+id/tv_item_money_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_money_sender"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size45px"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        />
    <TextView
        android:id="@+id/tv_best_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size45px"
        android:drawableLeft="@drawable/rp_icon_best"
        android:drawablePadding="2dp"
        android:text="@string/best_luck"
        android:textColor="@color/rp_best_luck_yellow"
        android:visibility="gone"/>
    <View
        android:id="@+id/view_line_no_head"
        style="@style/DividerStyleNoHead"
        android:layout_below="@id/tv_time"/>

    <View
        android:id="@+id/view_line"
        style="@style/DividerStyle"
        android:layout_below="@id/tv_time"
        android:visibility="gone"/>/>
</RelativeLayout>