<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar_back_text"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="毛&#12288;&#12288;重："/>
                <com.tongtong.purchaser.view.EditTextWithDeleteButton
                    android:id="@+id/num"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="16sp"
                    android:hint="请输入"
                    android:maxLength="8"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="number"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />

                <TextView
                    android:text="公斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="皮&#12288;&#12288;重："/>
                <com.tongtong.purchaser.view.EditTextWithDeleteButton
                    android:id="@+id/pi_num"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="16sp"
                    android:maxLength="8"
                    android:layout_marginRight="10dp"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="number"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />
                <TextView
                    android:text="公斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="净&#12288;&#12288;重："/>
                <com.tongtong.purchaser.view.EditTextWithDeleteButton
                    android:id="@+id/jz_num"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="number"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />

                <TextView
                    android:text="公斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="应&#12288;&#12288;付："/>
                <EditText
                    android:id="@+id/gb_num"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="number"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="实&#12288;&#12288;付："/>
                <com.tongtong.purchaser.view.EditTextWithDeleteButton
                    android:id="@+id/total"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@drawable/cursor"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />

                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="备注："/>
            </LinearLayout>
            <EditText
                android:id="@+id/beizhu"
                android:padding="8dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:hint="输入备注"
                android:background="@drawable/edit_bg2"
                android:inputType="textMultiLine"
                android:gravity="left|top"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <TextView
                android:id="@+id/price"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/anhuang"
                />
            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/yuding_selector"
                android:textColor="@android:color/white"
                android:text="确认"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>