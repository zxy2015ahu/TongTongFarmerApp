<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size216px"
        android:background="@drawable/rp_packet_group_detail_bg"/>

    <ImageView
        android:id="@+id/iv_avatar"
        style="@style/AvatarIconStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size129px"
        android:src="@drawable/rp_avatar"/>

    <LinearLayout
        android:id="@+id/layout_who_rp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avatar"
        android:layout_marginTop="@dimen/size27px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font45px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_username_format"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font45px"/>

        <ImageView
            android:id="@+id/iv_group_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size18px"
            android:visibility="gone"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_who_rp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size42px"
        android:layout_marginTop="@dimen/size18px"
        android:ellipsize="end"
        android:maxEms="22"
        android:maxLines="1"
        android:text="恭喜发财"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"/>

    <TextView
        android:id="@+id/tv_money_amount"
        style="@style/ReceivedMoneyStyle"
        android:layout_below="@id/tv_greeting"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_money_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size30px"
        android:layout_marginTop="@dimen/size18px"
        android:text="@string/money_detail_use"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"/>

    <TextView
        android:id="@+id/tv_money_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money_use"
        android:background="@color/rp_money_bg_color"
        android:paddingBottom="@dimen/size24px"
        android:paddingLeft="@dimen/size48px"
        android:paddingTop="@dimen/size45px"
        android:text="@string/money_status_no_taken"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"/>

    <View
        android:id="@+id/view_bottom_line"
        style="@style/DividerStyle"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_money_status"
        />

</RelativeLayout>