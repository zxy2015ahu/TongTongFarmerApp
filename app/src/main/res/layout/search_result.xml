<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/back_bn"
            android:layout_width="44dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:src="@drawable/history_back"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_bg11"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:layout_centerInParent="true"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/search_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search"
                    android:background="@null"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/aliwx_common_text_color"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zuji"
            android:layout_width="44dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/zuji"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/aliwx_wx_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:id="@+id/tv_choose_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >
                <TextView
                    android:id="@+id/tv_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:drawableRight="@drawable/icon_down"
                    android:textColor="@color/aliwx_common_text_color"
                    android:text="小龙虾"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/line_color"/>
        <RelativeLayout
            android:id="@+id/tv_choose_guige"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_guige_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:singleLine="true"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/icon_down"
                android:textColor="@color/aliwx_common_text_color"
                android:text="规格"/>
        </RelativeLayout>
        <View
            android:id="@+id/line1"
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/line_color"/>
        <RelativeLayout
            android:id="@+id/tv_choose_quyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >
            <TextView
                android:id="@+id/tv_quyu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:singleLine="true"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/icon_down"
                android:textColor="@color/aliwx_common_text_color"
                android:text="全国"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/line_color"/>
        <RelativeLayout
            android:id="@+id/paixu"
            android:layout_width="44dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/paixu_selected"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/aliwx_wx_line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/quanbu_fragment"/>
    </RelativeLayout>
</LinearLayout>