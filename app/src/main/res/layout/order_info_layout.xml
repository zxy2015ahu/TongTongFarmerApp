<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_bar_back_text"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadingEdge="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="农&#12288;&#12288;户："/>
                <TextView
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/name"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="品&#12288;&#12288;名："/>
                <TextView
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/produce_name"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="数&#12288;&#12288;量："/>
                <EditText
                    android:id="@+id/num"
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="16sp"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />
                <TextView
                    android:id="@+id/number_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg2"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/aliwx_common_text_color"
                    android:drawableRight="@drawable/drop_down_angle"
                    android:text="公斤"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="单&#12288;&#12288;价："/>
                <EditText
                    android:id="@+id/price"
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="16sp"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:paddingRight="8dp"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />
                <TextView
                    android:id="@+id/price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg2"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/aliwx_common_text_color"
                    android:drawableRight="@drawable/drop_down_angle"
                    android:text="元/公斤"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="定&#12288;&#12288;金："/>
                <EditText
                    android:id="@+id/dingjin"
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="16sp"
                    android:hint="请输入（不填表示无定金）"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="总&#8194;金&#8194;额："/>
                <EditText
                    android:id="@+id/total"
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="16sp"
                    android:hint="请输入（可不填）"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColorHint="@color/aliwx_select_fail_hint_color"
                    />
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="交货地点："/>
                <TextView
                    android:singleLine="true"
                    android:id="@+id/address"
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    />
                <Button
                    android:id="@+id/address_select"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:text="点击选择"
                    android:background="@drawable/yuding_selector"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/textcolor_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="交货时间："/>
                <TextView
                    android:id="@+id/time"
                    android:textColor="@color/aliwx_common_text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/time_select"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:text="点击选择"
                    android:background="@drawable/yuding_selector"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/aliwx_wx_line_color"/>

            <EditText
                android:id="@+id/beizhu"
                android:padding="8dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_marginTop="10dp"
                android:hint="输入您的备注要求"
                android:background="@drawable/edit_bg2"
                android:inputType="textMultiLine"
                android:gravity="left|top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/order"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:background="@drawable/yuding_selector"
                    android:textColor="@android:color/white"
                    android:text="确定下单"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
