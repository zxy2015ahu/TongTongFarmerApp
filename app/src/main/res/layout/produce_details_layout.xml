<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <com.tongtong.purchaser.widget.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:id="@+id/scroll_view"
            android:fadingEdge="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/aliwx_white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/bannerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <com.youth.banner.Banner
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:image_scale_type="center_crop"
                            />
                        <TextView
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="37dp"
                            android:textColor="@color/aliwx_white"
                            android:background="@drawable/indicator_bg"
                            />
                        <RelativeLayout
                            android:id="@+id/bottom_original_image_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="37dp">
                            <TextView
                                android:id="@+id/video_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:text="视频"
                                android:paddingRight="10dp"
                                android:textColor="@color/aliwx_white"
                                android:background="@drawable/video_select"
                                />
                            <TextView
                                android:id="@+id/image_item"
                                android:layout_toRightOf="@id/video_view"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/aliwx_white"
                                android:background="@drawable/video_unselect"
                                android:text="图片"
                                />
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/video_item"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/af_propdetail_icon_sp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/roundCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bg_43"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="17sp"
                                    android:textColor="@color/aliwx_common_text_color"
                                    android:text="白菜"/>
                                <LinearLayout
                                    android:id="@+id/activity_share_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/vector_drawable_icon_address"/>
                                    <TextView
                                        android:id="@+id/location"
                                        android:text="云南省昆明市"
                                        android:layout_marginLeft="4dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:textColor="@color/aliwx_common_text_color3"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="@dimen/line_height"
                                android:layout_height="match_parent"
                                android:background="@color/line_color"/>
                            <TextView
                                android:id="@+id/jubao"
                                android:drawableTop="@drawable/jubao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/aliwx_common_text_color3"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:drawablePadding="3dp"
                                android:text="举报"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:textColor="@color/price_color"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:text="7.00元/公斤"/>
                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:textColor="@color/aliwx_common_text_color"
                                android:textSize="12sp"
                                android:layout_marginLeft="3dp"
                                android:layout_height="wrap_content"
                                android:text="预计产量40000吨"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/btn_click_received"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="324人查看"
                                android:textSize="12sp"
                                android:gravity="left"/>
                            <View
                                android:layout_width="@dimen/line_height"
                                android:layout_height="match_parent"
                                android:background="@color/line_color"/>
                            <TextView
                                android:id="@+id/chat_record"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="324人咨询"
                                android:textSize="12sp"
                                android:gravity="center"/>
                            <View
                                android:layout_width="@dimen/line_height"
                                android:layout_height="match_parent"
                                android:background="@color/line_color"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="1笔交易"
                                android:textSize="12sp"
                                android:gravity="right"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/warm"/>
                    <TextView
                        android:id="@+id/net_warn"
                        android:layout_width="0dp"
                        android:paddingLeft="4dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/aliwx_common_text_color3"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/city_search_bg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bg_44"
                        android:padding="4dp"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:text="收购\n保障"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/aliwx_common_text_color"
                            android:textSize="12sp"
                            android:text="少货赔付 货不对板赔付 未按时发货赔付"/>
                        <TextView
                            android:id="@+id/baozhengjin"
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/aliwx_common_text_color2"
                            android:textSize="14sp"
                            android:text="已缴纳2000元诚信保证金"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_point_index"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/city_search_bg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="货品规格"
                    android:textSize="14sp"
                    android:textColor="@color/aliwx_common_text_color"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>
                <com.tongtong.purchaser.widget.NoScrollGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:id="@+id/tv_choose_guige"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/city_search_bg"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/head_bn"
                    android:padding="12dp">
                    <ImageView
                        android:id="@+id/head"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/head"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/name_text"
                            android:textColor="@color/aliwx_common_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="皇城金"/>
                        <RatingBar
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/rating_details_style"
                            android:minHeight="15dp"
                            android:maxHeight="15dp"
                            android:layout_below="@id/name_text"
                            android:stepSize="0.5"
                            android:rating="3.5"
                            android:layout_marginTop="8dp"
                            android:isIndicator="true"
                            />

                        <RelativeLayout
                            android:layout_below="@id/rating"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/left_name"
                                android:textColor="@color/aliwx_common_text_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:gravity="center_vertical"
                                android:drawableLeft="@drawable/shiming"
                                android:text="实名认证"/>
                            <TextView
                                android:id="@+id/right_name"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@id/left_name"
                                android:textColor="@color/aliwx_common_text_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:gravity="center_vertical"
                                android:drawableLeft="@drawable/shenfen"
                                android:text="身份认证"/>
                        </RelativeLayout>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aliwx_common_text_color3"
                        android:textSize="12sp"
                        android:drawablePadding="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/icon_point_index"
                        android:id="@+id/count"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/city_search_bg"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="60dp"
                            android:layout_height="@dimen/line_height"
                            android:background="@color/aliwx_wx_line_color"/>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货品详情"
                            android:textSize="14sp"
                            android:textColor="@color/aliwx_common_text_color"
                            />
                        <View
                            android:layout_width="60dp"
                            android:layout_height="@dimen/line_height"
                            android:background="@color/aliwx_wx_line_color"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/line_color"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="12sp"
                    android:textColor="@color/aliwx_common_text_color2"
                    android:lineSpacingExtra="3dp"
                    android:id="@+id/remarks"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listview"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/receive_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/city_search_bg"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="12dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="60dp"
                                android:layout_height="@dimen/line_height"
                                android:background="@color/aliwx_wx_line_color"/>
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="相关推荐"
                                android:textSize="14sp"
                                android:textColor="@color/aliwx_common_text_color"
                                />
                            <View
                                android:layout_width="60dp"
                                android:layout_height="@dimen/line_height"
                                android:background="@color/aliwx_wx_line_color"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/line_color"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mListView"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/city_search_bg"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/aliwx_common_text_color2"
                    android:text="--已经到底了--"/>
            </LinearLayout>
        </com.tongtong.purchaser.widget.MyScrollView>
        <include layout="@layout/produce_details_header"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aliwx_white">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/call_bn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/dadianhua"
                    android:textSize="11sp"
                    android:layout_marginLeft="4dp"
                    android:drawablePadding="1dp"
                    android:textColor="@color/aliwx_common_text_color"
                    android:text="打电话"/>
                <Button
                    android:id="@+id/chat_back"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/aliwx_white"
                    android:text="聊生意"
                    android:background="@drawable/chat_bg"/>
                <Button
                    android:id="@+id/order"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/aliwx_white"
                    android:text="立即下单"
                    android:background="@drawable/goumai_bg"/>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>

