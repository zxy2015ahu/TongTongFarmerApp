<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:recyclerClipToPadding="false"
        app:recyclerPaddingTop="0dp"
        app:layout_progress="@layout/progress_layout"
        app:layout_empty="@layout/empty_layout"
        app:recyclerPaddingLeft="0dp"
        app:recyclerPaddingRight="0dp"
        app:scrollbarStyle="outsideOverlay"
        app:scrollbars="vertical">
    </com.jude.easyrecyclerview.EasyRecyclerView>
    <include layout="@layout/no_network_layout"/>
</RelativeLayout>

