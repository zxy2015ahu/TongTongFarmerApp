<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/aliwx_white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                >
                <RelativeLayout
                    android:id="@+id/tv_choose_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_city_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:drawableRight="@drawable/icon_down"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="地区筛选"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/line_color"/>
                <RelativeLayout
                    android:id="@+id/layout_pay_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_type_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:drawableRight="@drawable/icon_down"
                        android:textColor="@color/aliwx_common_text_color"
                        android:text="品种筛选"/>

                </RelativeLayout>
            </LinearLayout>
    <View
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/aliwx_wx_line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapview"/>
        <ImageView
            android:id="@+id/center_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="28dp"
            android:src="@drawable/red" />

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            >
            <RelativeLayout
                android:id="@+id/rob_rp"
                android:layout_width="44dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_location_bg">
                <ImageView
                    android:id="@+id/left_button"
                    android:layout_width="43dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/vector_drawable_rob_rp"/>
                <ImageView
                    android:id="@+id/red_dot"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/red_dot"/>
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>