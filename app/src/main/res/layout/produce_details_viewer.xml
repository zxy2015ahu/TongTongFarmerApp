<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliwx_black">
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jz_title_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            >
            <LinearLayout
                android:id="@+id/back_bn"
                android:layout_width="@dimen/title_bar_height"
                android:layout_height="match_parent"
                android:background="@drawable/back_bg"
                android:clickable="true"
                android:gravity="center" >
                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:src="@drawable/back"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_marginTop="120dp">
                <TextView
                    android:id="@+id/video_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频"
                    android:background="@drawable/under_line"
                    android:textSize="16sp"
                    android:textColor="@color/aliwx_white"/>
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="图片"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/more_icon"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/jz_bottom_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                >
                <LinearLayout
                    android:id="@+id/left_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="西兰花"
                            android:textColor="@color/aliwx_white"
                            android:textSize="17sp"
                            tools:ignore="MissingPrefix"
                            fontPath="font/AkzidenzGrotesk-BoldCondAlt.otf"
                            />
                        <TextView
                            android:id="@+id/name_text"
                            android:layout_marginLeft="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\@我是卖菜的"
                            android:textColor="@color/aliwx_white"
                            android:textSize="17sp"
                            tools:ignore="MissingPrefix"
                            fontPath="font/AkzidenzGrotesk-BoldCondAlt.otf"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_bg_46"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/location_icon"/>
                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:layout_marginLeft="1dp"
                            android:textColor="@color/aliwx_white"
                            android:gravity="center_vertical"
                            android:text="云南省玉溪市"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_bg_46"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@drawable/white_oval"
                            android:src="@drawable/xinxi_msg"/>
                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/aliwx_white"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:letterSpacing="0.02"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/city_search_bg"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginTop="8dp"
                    android:background="#ccc"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/call_bn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:background="@drawable/white_oval"
                        android:src="@drawable/telephone_call_icon"
                        />
                    <Button
                        android:id="@+id/chat_back"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/aliwx_white"
                        android:text="聊生意"
                        android:background="@drawable/chat_bg"/>
                    <Button
                        android:id="@+id/order"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/aliwx_white"
                        android:text="立即下单"
                        android:background="@drawable/goumai_bg"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="58dp">
            <ImageView
                android:id="@+id/head_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/head_white_bg"
                android:src="@drawable/default_avator"
                />
            <ImageView
                android:id="@+id/iv_vi_add_front"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/fri_add"
                android:background="@drawable/white_oval"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/view_icon"/>
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/pink_oval"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/view_line_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/aliwx_white"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/favour"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/favour_not_"/>
            <TextView
                android:id="@+id/favour_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/aliwx_white"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/share_out"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/aliwx_white"
                android:text="0"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>