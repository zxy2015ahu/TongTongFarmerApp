<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/aliwx_white"
android:gravity="center_vertical"
android:orientation="horizontal">
<ImageView
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:src="@drawable/vector_drawable_speaker" />

<com.gongwen.marqueen.SimpleMarqueeView
    android:id="@+id/marqueeView"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:smvTextColor="@color/aliwx_common_text_color"
    app:smvTextEllipsize="start"
    app:smvTextGravity="center_vertical"
    app:smvTextSingleLine="false"
    app:smvTextSize="12sp"/>
</LinearLayout>