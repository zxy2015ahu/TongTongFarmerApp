<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/header"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:id="@+id/back_bn"
            android:layout_width="48dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerInParent="true"
                android:src="@drawable/details_back_normal"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/head_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <RelativeLayout
                android:id="@+id/video_current_time"
                android:visibility="gone"
                android:layout_toRightOf="@id/head_img"
                android:layout_width="30dp"
                android:layout_marginLeft="8dp"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/video_quality_wrapper_area"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/aliwx_location_msg_bg"/>
                <ImageView
                    android:id="@+id/left_video_download_progress_stub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/video_tag_details"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:id="@+id/favour"
                android:layout_width="48dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/shoucang_count"
                    android:layout_width="24dip"
                    android:layout_centerInParent="true"
                    android:layout_height="24dip"
                    android:src="@drawable/favour_not_normal"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/favour"
                android:id="@+id/share"
                android:layout_width="48dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/share_img"
                    android:layout_width="24dip"
                    android:layout_centerInParent="true"
                    android:layout_height="24dip"
                    android:src="@drawable/share_details_normal"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>