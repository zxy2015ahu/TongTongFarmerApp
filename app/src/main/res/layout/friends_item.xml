<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingRight="12dp">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/no_icon"
        android:id="@+id/head_img"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/name"
            android:text="sdfsdf"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/aliwx_common_text_color"/>
        <TextView
            android:text="sdfsdf"
            android:id="@+id/beizhu"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:textColor="@color/aliwx_common_text_color3"/>
    </RelativeLayout>
    <Button
        android:focusable="false"
        android:visibility="gone"
        android:id="@+id/tongyi"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/yuding_selector"
        android:textColor="@color/aliwx_white"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="接受"/>
    <TextView
        android:id="@+id/receive_state"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="已添加"
        android:textColor="@color/aliwx_common_text_color2"
        />
</RelativeLayout>