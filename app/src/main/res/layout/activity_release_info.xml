<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/title_bar_layout"
        layout="@layout/title_bar_back_text" />

    
    
    <RelativeLayout
        android:id="@+id/remarks_layout"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_below="@id/title_bar_layout"
        android:layout_margin="10dip"
        android:background="@drawable/round_frame_white_bg"
        android:padding="10dip" >

        <EditText
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|top"
            android:hint="@string/remarks_hint"
            android:textColor="#666"
            android:textColorHint="#999"
            android:background="@null"
            android:textSize="16dip" />
    </RelativeLayout>
<LinearLayout 

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_below="@id/remarks_layout"
        >
        <Button 
            android:id="@+id/confirm_bn"
            android:layout_width="320dip"
            android:layout_height="50dip"
            android:background="@drawable/bn_bg_green_big"
            android:text="@string/confirm"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="16dip"
            />
        
    </LinearLayout>
</RelativeLayout>