<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_bar_back_text"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <View
                        style="@style/line_style_heng"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="订单号"/>
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:id="@+id/order_no"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:textColor="@color/anhuang"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            />
                        <View
                            style="@style/line_style_shu"
                            />
                    </LinearLayout>
                    <View
                        style="@style/line_style_heng"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="状\t\t态"/>
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:id="@+id/status"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textColor="@color/anhuang"
                            android:layout_height="match_parent"
                            />
                        <View
                            style="@style/line_style_shu"
                            />
                    </LinearLayout>
                    <View
                        style="@style/line_style_heng"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="农\t\t户"/>
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            />
                        <View
                            style="@style/line_style_shu"
                            />
                    </LinearLayout>
                    <View
                        style="@style/line_style_heng"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="品\t\t名"/>
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:id="@+id/produce_name"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            />
                        <View
                            style="@style/line_style_shu"
                            />
                    </LinearLayout>
                    <View
                        style="@style/line_style_heng"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/amount_layout">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="数\t\t量"/>
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="农产品名"/>
                            <View
                                style="@style/line_style_shu"
                                />
                        </LinearLayout>

                        <View
                            style="@style/line_style_heng"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="单\t\t价"/>
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="农产品名"/>
                        <View
                            style="@style/line_style_shu"
                            />

                    </LinearLayout>


                    <View
                        style="@style/line_style_heng"/>
                    <LinearLayout
                        android:id="@+id/custom"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="毛\t\t重"/>
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:id="@+id/maozhong"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                />
                            <View
                                style="@style/line_style_shu"
                                />
                        </LinearLayout>
                        <View
                            style="@style/line_style_heng"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="皮\t\t重"/>
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:id="@+id/pizhong"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="--"
                                android:layout_height="match_parent"
                                />

                            <View
                                style="@style/line_style_shu"
                                />

                        </LinearLayout>
                        <View
                            style="@style/line_style_heng"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="净\t\t重"/>
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:id="@+id/jinzhong"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                />

                            <View
                                style="@style/line_style_shu"
                                />

                        </LinearLayout>
                        <View
                            style="@style/line_style_heng"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="应\t\t付"/>
                            <View
                                style="@style/line_style_shu"
                                />
                            <TextView
                                android:id="@+id/total"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                />

                            <View
                                style="@style/line_style_shu"
                                />

                        </LinearLayout>
                        <View
                            style="@style/line_style_heng"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="定\t\t金"/>
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:id="@+id/dingjin"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            />

                        <View
                            style="@style/line_style_shu"
                            />

                    </LinearLayout>
                    <View
                        style="@style/line_style_heng"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="备\t\t注"/>
                        <View
                            style="@style/line_style_shu"
                            />
                        <TextView
                            android:id="@+id/beizhu"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="农产品名"/>
                        <View
                            style="@style/line_style_shu"
                            />

                    </LinearLayout>
                    <View
                        style="@style/line_style_heng"/>
                        <TextView
                            android:id="@+id/send_address"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/anhuang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="送货地址："/>
                        <TextView
                            android:id="@+id/add_time"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/anhuang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="送货截止时间："/>
                        <TextView
                            android:id="@+id/send_time"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/anhuang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="送货截止时间："/>
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp">
                    <Button
                        android:id="@+id/btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/yuding_selector"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1e1e1">
            <LinearLayout
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/aliwx_loading_progress"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
