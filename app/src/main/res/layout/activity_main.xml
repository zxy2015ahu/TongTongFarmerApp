<?xml version="1.0" encoding="utf-8"?>
<com.tongtong.purchaser.widget.MyFragmentTabHost
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/aliwx_common_bg_color"
    android:layout_height="match_parent">
    <TabWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@android:id/tabs"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@android:id/tabcontent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="7dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bottom_bg"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="0dp"
                    android:id="@+id/shoucai"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/rb_style"
                    android:checked="true"
                    android:textColor="@color/rb_text_color"
                    android:text="@string/zhaocai"
                    android:drawableTop="@drawable/zhaocai_back"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/xiaoxi"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            style="@style/rb_style"
                            android:textColor="@color/rb_text_color"
                            android:text="@string/xiaoxi"
                            android:drawableTop="@drawable/xiaoxi_back"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/msg_unread_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/red_dot"
                            android:textSize="10sp"
                            android:textColor="@color/aliwx_white"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:id="@+id/shouye"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/rb_style"
                    android:textColor="@color/rb_text_color"
                    android:text="@string/shouye"
                    android:drawableTop="@drawable/shouye_back"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/wode"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            style="@style/rb_style"
                            android:textColor="@color/rb_text_color"
                            android:text="@string/wode"
                            android:drawableTop="@drawable/wode_back"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/audio_unread"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/red_dot"
                            android:textSize="10sp"
                            android:textColor="@color/aliwx_white"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tab_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布收购"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/lsq_filter_title_default_color"
                android:textSize="12sp"
                android:layout_below="@id/tab_icon"
                />
        </RelativeLayout>
    </RelativeLayout>
</com.tongtong.purchaser.widget.MyFragmentTabHost>
