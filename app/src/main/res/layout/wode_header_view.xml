<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/head_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/grzx_bg"
android:orientation="vertical">
<RelativeLayout
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="23dp"
    android:paddingTop="10dp"
    >
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/default_head"
        android:id="@+id/head_img"/>
    <RelativeLayout
        android:layout_toRightOf="@id/head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/head_img"
        android:layout_marginLeft="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/username"
            android:textColor="@color/aliwx_white"
            android:text="Jack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginTop="6dp"
            android:textSize="10sp"
            android:background="@drawable/edit_bg_41"
            android:textColor="@color/aliwx_white"
            android:text="Lv0 经验值61"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/shezhi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shezhi"/>
        <LinearLayout
            android:id="@+id/iv_pass_authentication"
            android:layout_marginTop="10dp"
            android:layout_below="@id/shezhi"
            android:layout_alignParentRight="true"
            android:background="@drawable/grzx_bg_qiandao"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/yirenzheng"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未认证"
                android:layout_marginLeft="1dp"
                android:textSize="13sp"
                android:textColor="@color/aliwx_white"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <RelativeLayout
        android:id="@+id/amount_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="@dimen/wode_text_size"
            android:textColor="@color/aliwx_white"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@id/amount"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:textColor="@color/aliwx_white"
            android:drawableLeft="@drawable/vector_drawable_qianbao"/>
    </RelativeLayout>
    <View
        android:layout_width="@dimen/line_height"
        android:layout_height="30dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/jifen_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/wode_text_size"
            android:textColor="@color/aliwx_white"
            android:layout_centerHorizontal="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/jifen"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jifen_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                android:textColor="@color/aliwx_white"
                android:drawableLeft="@drawable/vector_drawable_jifen"/>
            <View
                android:id="@+id/jifen_dot"
                android:visibility="gone"
                android:layout_toRightOf="@id/jifen_txt"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/red_oval"/>
        </RelativeLayout>


    </RelativeLayout>
    <View
        android:layout_width="@dimen/line_height"
        android:layout_height="30dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/jiaoyi_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jiaoyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/wode_text_size"
            android:textColor="@color/aliwx_white"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@id/jiaoyi"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易数"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:textColor="@color/aliwx_white"
            android:drawableLeft="@drawable/vector_drawable_jiaoyi"/>
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>